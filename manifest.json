{
  "manifest_version": 3,
  "name": "Suno Batch Generator",
  "version": "1.0.0",
  "description": "Batch generate music on suno.com from JSON/CSV files with automatic WAV download",
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://suno.com/*",
    "https://www.suno.com/*"
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://suno.com/*",
        "https://www.suno.com/*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Suno Batch Generator"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "token-extractor.js"
      ],
      "matches": [
        "https://suno.com/*",
        "https://www.suno.com/*"
      ]
    }
  ]
}